<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Publicar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/tvAgregaTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Ingrese el encabezado..."/>
        <ImageView
            android:id="@+id/ivPublicacion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/subir_img"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/tvAgregaCuerpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:minHeight="100dp"
            android:gravity="top"
            android:hint="Ingrese el contenido..."/>

        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/boton_redondeado"
            android:text="Publicar" />

    </LinearLayout>

</ScrollView>